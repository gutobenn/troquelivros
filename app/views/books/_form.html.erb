<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :name, class: 'required_asterisk' %>
      <%= form.text_field :name, id: :book_name, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :author, class: 'required_asterisk' %>
      <%= form.text_field :author, id: :book_author, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :description %>
      <%= form.text_area :description, id: :book_description, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :picture %>
      <%= form.file_field :picture %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
