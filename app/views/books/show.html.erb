<div class="row" id="book-show">
  <div class="col-sm-3 white-box">
    <%= image_tag(@book.picture.url(:medium)) %>
    <h4><%= @book.name %></h4>
    <%= @book.author %>
  </div>
  <div class="col-sm-9 white-box">
    <%= @book.description %>

    <br /><br />

    <h3>Quem tem</h3>
    <table>
      <thead>
        <tr>
          <th>Livro</th>
          <th>Usu√°rio</th>
        </tr>
      </thead>

      <tbody>
        <% @book.book_instances.each do |book_instance| %>
          <tr>
            <td><%= link_to book_instance.book.name, book_instance %></td>
            <td><%= link_to book_instance.user.name, book_instance.user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Editar', edit_book_path(@book) %> |
<%= link_to 'Remover', @book, method: :delete, data: { confirm: 'Deseja mesmo remover este livro?' } %>
