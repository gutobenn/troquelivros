<p id="notice"><%= notice %></p>

<h1>Book Instances</h1>

<table>
  <thead>
    <tr>
      <th>Livro</th>
      <th>Usuário</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_instances.each do |book_instance| %>
      <tr>
        <td><%= link_to book_instance.book.name, book_instance.book %></td>
        <td><%= link_to book_instance.user.name, book_instance.user %></td>
        <td><%= book_instance.description %></td>
        <td><%= link_to 'Show', book_instance %></td>
        <td><%= link_to 'Edit', edit_book_instance_path(book_instance) %></td>
        <td><%= link_to 'Destroy', book_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

